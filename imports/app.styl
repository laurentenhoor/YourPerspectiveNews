@import 'nib';

@import url("http://fonts.googleapis.com/css?family=Montserrat:100,200,300,400,500,600,600,700,900");
@import url("https://fonts.googleapis.com/css?family=Material+Icons");

html * {
	// max-height:1000000px;
	box-sizing: border-box !important;
}

html {
      -ms-overflow-style: none;
}

html, body {
   -webkit-overflow-scrolling : touch !important;
    overflow: hidden;
    max-width:100%;
    max-height:100%;
}

yourpers-app {
    overflow-y: scroll;
    overflow-x: hidden;
    display: block;
    height: 100%;
    width:100%;
    -ms-overflow-style: none;
}

div[ng-click]{
    cursor: pointer;
}

[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
  display: none !important;
  width:0px;
  height:0px;
}

body {
    color: #3d448b;
    color: rgba(0, 0, 0, 0.8);
    background: linear-gradient(to top, rgba(236, 233, 230, 0.36), #ffffff);
    font-size: 3vw;
    margin: 0px;
    font-family: "Montserrat", Helvetica, sans-serif;
    overflow:hidden;
}

input,
button,
select,
textarea {
  font-family: inherit;
  font-size: inherit;
  line-height: inherit;
}

#container{
    height: 100%;
    width: 100%;
    overflow-y: scroll;
}