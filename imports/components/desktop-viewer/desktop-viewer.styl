@import '{}/imports/style/variables';
@import 'nib';

::-webkit-scrollbar {
    width: 0px;  /* remove scrollbar space */
    background: transparent;  /* optional: just make scrollbar invisible */
    display: none;
}

desktop-viewer {

         

    .company-strategy {
        position: absolute;
        top: 90px;
        left: 50px;
        display: flex;
        flex-direction: column;
        


   .features {
            color: #fff;
            width: 300px;
            // text-align: justify;
            font-size: 12px;
            line-height: 1.3;
            font-weight: 300;
        }

        .feature-details {
            font-weight:300;    
            font-size:14px;
        }

        .feature-details-container {
            margin:auto;
        }
        .feature-category {
            display:flex;
            flex-direction: row;}

        .feature-icon {
            margin-right:15px;
            width:100px;
            height:85px;
            display:flex;
        }
        .svg-icon {
            color:white;
            margin:auto;
            width:100%;
            height: 100%;
            padding:10px;

        }
        .feature-title {
            font-weight:700;
            font-size:20px;
            margin-bottom:5px;
        }


        .logo {
            display: flex;
            flex-direction: row;
            height: 60px;
            background-color: rgba(255,255,255,.9);
            border-radius: 4px;
            // width: min-content;
            width:100%;
            // margin-left: -26px;
            margin-bottom: 11px;
            

            .logo-img {
                width: 50px;
                float: left;
                margin-left: 6px;
            }

            .logo-title {
                // color: #fff;
                font-weight: 300;
                font-size: 22px;
                margin: auto;
                margin-right: 20px;
                margin-left: 22px;
                color: rgba(0, 0, 0, 0.7);
            }
        }

        .title {
            color: white;
            font-weight: 700;
            font-size: 40px;
            float: left;
            // margin-left: 2px;
            margin-bottom: 80px;
        }
    }

    .desktop-background {
        width: 100%;
        height: 100%;
        position: absolute;
        display: block;
        // background-image: url('https://www.stedencanvas.nl/wp-content/uploads/2016/02/Rotterdam-20.jpg');
        // background-image: url('http://static.panoramio.com/photos/original/24593955.jpg');
        background-image: url('https://i1.wp.com/jean-paulopperman.nl/wp-content/uploads/2016/03/Amsterdam-Grachten-fiets-avond.jpg');
        background-size: cover;
    }

    .gradient-overlay {
        position: absolute;
        display: block;
        width: 100%;
        height: 100%;
        background-image: linear-gradient(to right, rgba(0, 92, 151, 1), rgba(54, 55, 149, 0.95));
        opacity: 0.8;
    }

    .screen-overlay {
        // position: absolute;
        // z-index: 1;
        // right: -487px;
        // top: -136px;
        // width: 1647px;
        // pointer-events: none;
        position: absolute;
        z-index: 1;
        right: -450px;
        top: -136px;
        width: 1520px;
        pointer-events: none;
    }

    .desktop-title {
        font-size: 15px;
        margin: 15px;
        text-align: center;
    }

    .maincontentdiv {
        background: black;
        position: absolute;
        right: 185px;
        top: 55px;
        height: 778px;
        width: 379px;
        -moz-border-radius: 15px;
        border-radius: 15px;
        overflow: hidden;
        border: 1px solid #c1c1c1;
        box-shadow: 0.3px 0.4px 1.4px rgba(4, 4, 4, 0.42);
        margin-right: auto;
        margin-left: auto;

        iframe {
            border: none;
            position: relative;
            -ms-overflow-style: -ms-autohiding-scrollbar;
        }
    }

    .logo-desktop {
        width: 18px;
        margin-top: -6px;
    }

    .red {
        color: $brand-color;
        // color: rgba(0, 0, 0, 0.7);
    }
}
