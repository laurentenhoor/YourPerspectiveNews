        margin-top: -0.5vw;
        margin-right: 2vw;

        position:absolute;
        top:0;
        right:0;
    }    

    .md-button {
        opacity: 0.7;
        min-width: 10vw;
        line-height: 5vw;
        font-size:2vw !important;
        margin: 0vw;
        padding: 0vw 0vw 0 0vw;

    }

    .date-banner {
        font-size:3vw;    
    }

    .hot-icon {
        font-size: 4vw;
        margin-right: -1.2vw;
        margin-left: 2.2vw;
        /* margin-top: 0.7vw; */
        margin-bottom: -1.2vw;
        color:#da272c;
    }
    
    .five {
        font-weight:600;
        font-size: 3.5vw;
        display:inline-block;
        // position: absolute;
        margin-top: 0.7vw;
        // color:#da272c;
    }

}


.company-strategy {
    // font-family: "Montserrat";
    font-size: 2.2vw;
    margin-top: -0.8vw;
    display: table;
    color: #6d76d4;
    
    color: $brand-color;
    padding-left: 5.3vw;
    margin-top: -1.1vw;
    display:none;
}

.company-logo {
    width: 9.4vw;
    float: left;
    font-size: 8.9vw;
    color: #debf62;
    text-shadow: 0.3vw 0.3vw #3d448b;
    //filter: contrast(1.5) saturate(120%);
    margin-top: -0.9vw;
    margin-right: 0.6vw;
    margin-left: -0.5vw;
    opacity: 1;
}

.company-text {
float: left;
    margin-left: 0.6vw;
    padding-top: 0.5vw;
}

.company-logo-title {
    top: 0.7vw;
    font-size: 4.9vw;
    float: left;
    color: #ef4a48;
    color: rgba(0, 0, 0, 0.7);
    // font-family: "Montserrat";
    /* opacity: 0.87; */
    font-weight: 400;
}


.company-logo-container {
	text-align: left;
	margin: 3.3vw 3vw;
	display: table;
	
}

.menu-view-switch {
	float: right;
	padding-right: 4vw;
}

a {
	color: inherit;
	text-decoration: none;
}


.menu {
    list-style: none;
    /* border-top: 0.08em solid #d4d4d4; */
    padding: 0.5em 0 0.5em;
    color: #3d448b;
    // font-family: "Montserrat", verdana, sans-serif;
    font-size: 3.7vw;
    /* background: rgba(255, 236, 0, 0.65); */
    color: rgba(0, 0, 0, 0.55);
    /* background: rgba(148, 148, 148, 0.38); */
    color: rgba(255, 255, 255, 0.91);
    padding: 0.3em 0 0.3em;
    /* border-top: 0.1em solid white; */
    /* background: #f35b20; */
    /* border-top: 0.08em solid rgba(134, 134, 134, 0.4); */
    background: rgba(243, 243, 243, 0.7);
    color: #5d5c5c;
    /* color: white; */
}

.menu>li {
	display: inline;
}

.menu>li+li:before {
	padding-right: 0.3em;
}

/*  For list */
ul {
	text-align: left;
	// margin: 3vw 0 0;
	padding: 0;
	list-style-position: inside;
}

li {
	margin: 0 0 0 3vw;
	padding: 0;
}

b {
	font-weight: 600;
}


.pectives {
	color: #7d78a2;
	font-weight: 100;
	opacity: 0.2;
	display: none;
}


