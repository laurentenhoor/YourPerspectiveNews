@import '{}/imports/style/variables';

// @import "../../style/accounts_login.less";
header-menu {
    position: relative;
    display: block;

    .add-article-top-menu {
        opacity: 0.7;
        // float: right;
        margin-top: -3vw;
        margin-right: 2vw;
        position: absolute;
        top: 0;
        right: 0;
    }

    .md-button {
        // opacity: 0.7;
        min-width: 10vw;
        line-height: 5vw;
        font-size: 2vw !important;
        // margin: 0vw;
        // padding: 0vw 0vw 0 0vw;
    }
}

.beta-tag {
    color: $brand-color;
    font-size: 2vw;
    padding-left: 1.5vw;
}

.company-logo {
    width: 11vw;
    height: 11vw;
    float: left;
    font-size: 8.9vw;
    color: #debf62;
    text-shadow: 0.3vw 0.3vw #3d448b;
    // filter: contrast(1.5) saturate(120%);
    margin-top: -2vw;
    margin-right: 0vw;
    margin-left: -1.5vw;
    margin-bottom: -1vw;
    opacity: 1;
}

.company-text {
    float: left;
    margin-left: 0.6vw;
    padding-top: 0.7vw;
}

.company-logo-title {
    top: 0.7vw;
    font-size: 4.9vw;
    float: left;
    color: #ef4a48;
    color: rgba(0, 0, 0, 0.7);
    /* opacity: 0.87; */
    font-weight: 400;
}

.company-logo-container {
    text-align: left;
    margin: 5vw auto;
    display: table;
}

.menu-view-switch {
    float: right;
    padding-right: 4vw;
}

a {
    color: inherit;
    text-decoration: none;
}

b {
    font-weight: 600;
}

.pectives {
    color: #7d78a2;
    font-weight: 100;
    opacity: 0.2;
    display: none;
}
