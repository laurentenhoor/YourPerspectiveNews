url-debugger {
    .article-preview {
        background-size: cover;
        background-position: center;
        padding: 0;
        margin-bottom: 3vw;
    }

    .gradient-overlay {
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3) 40%, transparent);
        // opacity:0.5;
        padding: 3vw;
    }

    .article-logo {
        width: 10vw;
        height: 10vw;
        background-size: cover;
    }

    .article-title {
        color: white;
        font-weight: 600;
        font-size: 3vw;
    }

    .article-publisher {
        color: white;
        font-weight: 700;
        font-size: 2.5vw;
    }
}