  .article-actions-dialog {
    
    // md-input-container {
    //     padding: 0vw;
    //     margin: 0;
    //     margin-top: 3vw;
    // }

    .url-input {
        font-size: 3vw !important;
    }

    .image-and-details-container {
        border-radius: 0.8vw;
        white-space: normal;
        overflow-x: auto;
        display: flex;
        flex-direction: column;
        box-shadow: 0.3vw 0.4vw 1.4vw rgba(4, 4, 4, 0.42);
        width: 100%;
        height: 104vw;
        opacity: 0.9;
        box-shadow: none;
        height: 50vw;
        border-radius: 0;
    }

    .publisher {
        color: white;
        font-size: 3vw;
        font-style: italic;
        font-weight: 600;
        opacity: 0.8;
        margin-bottom: 2vw;
        z-index: 4;
        padding-right: 0.5vw;
    }

    .title {
        color: white;
        font-size: 4.7vw;
        font-weight: 700;
        z-index: 4;
        margin-bottom: 2.5vw;
    }

        .image-container {
        display: flex;
        flex-direction: column;
        position: relative;
        flex: 1;
        min-width: 0;
        min-height: 0;
        overflow: hidden;
        position:relative;
    }

    .image:before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-image: linear-gradient(-180deg, rgba(0, 0, 0, 0.3), transparent);
        opacity: 0.4;
        pointer-events: none;
        z-index: 1;
    }

    .image {
        background-size: cover;
        background-position: center;
        // background-color: white;
        display: flex;
        flex: 1;
        min-width: 0;
        min-height: 0;
        overflow: hidden;
        position:absolute;
        width:100%;
        height: 100%;
    }

    .title-container {
        position: absolute;
        bottom: 0;
        width: 100%;
        text-align: left;
        padding: 4vw;
        background-image: linear-gradient(to top, rgba(0, 0, 0, 0.7) 40%, transparent);
        line-height: 1.4;
        z-index: 3;
    }
}