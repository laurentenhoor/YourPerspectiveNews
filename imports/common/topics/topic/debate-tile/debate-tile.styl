debate-tile {
    $margin-left = 4vw;

    .md-button {
        font-size: 2.4vw !important;
        margin:0 8px;
        min-height:30px;
        line-height:20px;
    }

    .md-input {
        line-height:1.6;}

    .spacing {
        margin: auto;
    }
    .first-use-text {
        padding: 4vw;
        padding-bottom:6vw;
        font-size: 4.7vw;
        font-weight: 700;
        background-image: linear-gradient(to top, rgba(0,0,0,0.65) 40%, transparent); //bottom side
            // background-image: linear-gradient(to bottom, rgba(0,0,0,0.5) 60%, transparent); //top side
        // padding-bottom: 20vw;
        color: #fff;
        // height: 16%;
    }

    .remove {
        float: right;
        margin-right: $margin-left;
        margin-top: 4vw;

        .material-icons {
            font-size: 4vw !important;
        }
    }

    .tile-container {
        position: relative;
        background-image: url('http://www.kattensite.be/index.php?app=core&module=attach&section=attach&attach_rel_module=post&attach_id=85539');
        // background:white;
    }

    .answer-container {
        padding: 2vw 0;
        // border-bottom:1px solid lightgrey;
    }

    .question {
        font-size: 3.7vw;
        font-weight: 600;
            padding: 0 4vw;
        padding-top: 3.5vw;
    }

    .question-timestamp {
        font-size: 2vw;
        color: grey;
        font-style: italic;
        padding: 0 $margin-left;
    }

    .answer {
        // padding-left: $margin-left;
        // margin-top: $margin-left;
        padding: 2vw 4vw;
        font-size: 2.8vw;
        white-space: pre-wrap;
        overflow:hidden;
        // font-family: courier;
    }

    .answer-show-more-button {
        margin:auto;
        text-align:center;    
    }


    question {
        border-bottom: 1px solid lightgrey;
        border-top: 1px solid lightgrey;
    }

    questions {
        overflow-y: scroll;
        overflow-x: hidden;
        padding-bottom: 15vw;
        margin-bottom: auto;
    }

    contact-info {
        display: flex;
        flex-direction: row;
        font-size: 2.2vw;
        padding-left: $margin-left;
    }

    .question-controls {
        margin-top: 3vw;
        background: #ececec;
    }

    .new-question-title {
        font-size: 2.2vw;
        font-weight: 600;
        padding: 4vw 0.8vw 2vw 0.8vw;
    }

    .new-question {
        width: 100%;
        height: fit-content;
        background: #fff;
        // border-top: 1px solid #d3d3d3;
        margin-right: auto;
        margin-left: auto;
    }

    .name {
        font-weight: 500;
    }

    .headline {
        font-size:1.8vw;
        }
    

    .timestamp {
        font-style: italic;
        font-size:1.8vw;
    }

    contact-details {
        flex-direction: column;
        padding: 1vw;
        margin: auto 0;
    }

    content {
        display: flex;
        flex-direction: column;
        border-top: 1px solid lightgrey;
        background: linear-gradient(to top, rgb(245, 245, 245) 0%, white);

        .avatar-img {
            width: 8vw;
            height: 8vw;
            margin: auto;
            border-radius: 50%;
        }

        .avatar {
            max-width: 15vw;
            padding: 1vw;
        }
    }
}