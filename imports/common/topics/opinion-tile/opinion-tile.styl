$transparante_white = rgba(255, 255, 255, 0.49); // #ffffff7d

opinion-tile {
    height: 100%;
    width: 100%;
    padding-right: 1vw;
    color: white;
    font-weight: 500;

    vote {
        float: right;
        position: relative;
        right: 0;
        top: 0;
        margin-top: -0.5vw;
        margin-left: 2.5vw;
        margin-bottom: 1vw;
    }

    a {
        text-decoration: underline;
    }

    b {
        font-weight: 700;
    }


    .edit-opinion-button {
        margin-bottom:4vw;    
    }
    .opinion-info {
        // float:right;
        margin-bottom:3vw;
        div {
            margin-bottom:1vw;
        }
    }

    .opinion-container {
        padding: 3vw;
        padding-right: 5vw;
        height: 100%;
        overflow-y: scroll;
        $gradient-opacity = 0.97;
        // background-image: linear-gradient(to right, rgba(0, 92, 151, $gradient-opacity), rgba(54, 55, 149, $gradient-opacity));
        // background-image: linear-gradient(to right, rgba(229, 45, 39, $gradient-opacity), rgba(179, 18, 23, $gradient-opacity)) !important;
        background: brown; // nice alternative
    }

    .content-text {
        text-align: justify;
        line-height: 1.6;
        font-size: 3.4vw;
    }

    .content.root {
		margin-left: -3vw;
        padding-left: 3vw;
		border-left: 3vw solid rgba(255, 255, 255, 0.53);
	}



}