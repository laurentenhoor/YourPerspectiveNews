@import 'nib';

topics {

    .scroll-window {

        margin: 3vw 0 0 0; 
        padding: 0 0 3vw 0;

        width:100%;
        overflow-x: scroll;
  
    }

    .scroll-container {
        display:flex;
        width:fit-content;

        position:relative;

        padding-left: 1vw;
        padding-right: 1vw;
        
        }

    .content-container {
        
        display:block;

        margin: 0vw 1vw;
        
        width:80vw;
        vertical-align: top;

    }


}


.bulletin-visited {
    
    @keyframes visited {
        0% {transform: translateY(0);}
        10% {transform: translateY(-7vw);}
        95% {transform: translateY(0);}
        100% {transform: translateY(0);}
    }

    animation: visited 0.7s ease-out 0s 1 normal;
}

.bulletin-item-image-and-details-container {

    display: flex;
    flex-direction: column;

    width: 100%;
    height: 104vw;
    
    box-shadow: 0.3vw 0.4vw 1.4vw rgba(4, 4, 4, 0.42);
    border-radius: 0.8vw;
    
    white-space: normal;
    overflow-x: auto;
    
}

.bulletin-item-image-container {

    display: flex;
    flex-direction: column;
    position:relative;
    
    flex:1;
        
   	min-width: 0;
	min-height: 0;
    overflow: hidden;	
}


.bulletin-item-image:before {

    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-image: linear-gradient(-180deg,rgba(0,0,0,.3),transparent);
    opacity: 0.4;
    
    pointer-events: none;
    z-index:1;

}

.bulletin-item-image {
	
	background-size: cover;
	background-position: center;
	
	background-color:white;
	
    display: flex;
    flex:1;
        
    min-width: 0;
	min-height: 0;
	overflow: hidden;
	
}


.bulletin-item-description {

    padding: 4vw;
    
    min-width: 0;
    min-height: 0;
    max-height: 42vw;
    height:30vw;

    z-index: 1;

    background: white;
    color: #151515;
    
    font-weight: 400;
    font-size: 3vw;
    text-align: left;
    line-height: 1.6;

    display: flex;
    position: relative;
    overflow: hidden;
    
}

.bulletin-item-description:before {

	content:"";
	
    position:absolute;
	bottom:0;
	left:0;

    width:100%;
	height:10%;

	background-image: linear-gradient(to top,rgba(255,255,255,1),rgba(255,255,255,0));
	
}

.auto-height {
	height:auto !important;
}


.full-height{
	height:100%;
	}

.rest-of-height{
	height:auto;
}
	
.bulletin-item-title-container {
    position: absolute;
    bottom: 0;
    width:100%;
    text-align: left;
    padding: 4vw;
    
    background-image: linear-gradient(to top,rgba(0,0,0,.7) 40%,transparent);
    line-height: 1.4;
    
    z-index:3;
	
}
	
.bulletin-item-controls-container {
    background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.5) 10%, transparent);
    position: absolute;
    height: 25vw;
    width: 100%;
    z-index: 2;
}
	
.bulletin-item-title {
	color: white;
    font-size: 4.7vw;
    font-weight: 700;
    
    z-index:4;
    
    margin-bottom:2.5vw;
    
	}

.bulletin-time-elapsed {
	
	color:white;
	font-size:3vw;
	font-weight:400;
	opacity:0.8;
	
    float:left;
    z-index:4;

	
	}

.bulletin-item-publisher {
	
	color: white;
    font-size: 3vw;
    
    font-style:italic;
    font-weight: 600;
    opacity:0.8;
    float:right;
    z-index:4;
    padding-right:0.5vw;

    
	}		

.bulletin-item-header {
    text-align: left;
    color: darkgrey;

    font-weight: 400;
    font-size: 3vw;
    margin: 1vw 1vw;
	
	}

.bulletin-sources {
	white-space: nowrap;
    overflow-x: scroll;
    
    width: 100%;
    max-width:80vw;
    background-color: white;
    
    text-align:right;
	
}

.bulletin-source {
	
	display:inline-block;
	
	height:7vw;
	width:7vw;
	
	background-size:cover;
	
	margin-right:5vw;
	margin-bottom:0vw;
	margin-top:1vw;

    filter: grayscale(100%);
    opacity: 0.6;	
}

.bulletin-source-selected {
	filter:grayscale(0%);
	opacity:1;
	   
	content: "";
    
	}

.solid-overlay {
	position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    bottom: 0;
    opacity:0.5;
	background-color: rgba(0,0,0,.1);
	pointer-events: none;
	z-index:1;
	 
}
	
.bulletin-voting {
	position:absolute;
	right:3vw;
	top: 3vw;
	z-index:3;
}

.bulletin-vote-score {
	color:white;
	text-align:center;
	font-weight:700;
	font-size:3.5vw;
	// font-family:"Montserrat";
	margin:1.5vw;
}


$arrow-width = 3.7vw;
$arrow-narrow-side = 3.2vw solid transparent;
$arrow-wide-side = $arrow-width solid white;

.bulletin-arrow-up {
  width: 0; 
  height: 0; 

  margin:1vw;
  
  border-left: $arrow-narrow-side;
  border-right: $arrow-narrow-side;

  border-bottom: $arrow-wide-side;
    
}

.bulletin-arrow-down {
    width: 0; 
    height: 0; 

    margin:1vw;
    
    border-left: $arrow-narrow-side;
    border-right: $arrow-narrow-side;
  
    border-top: $arrow-wide-side;
}

.bulletin-upvoted {

	border-bottom: $arrow-width solid rgba(10, 80, 191, 1);
	 
	 @keyframes bounceUp {
			0% {transform: translateY(0);}
			15% {transform: translateY(-1.2vw);}
			95% {transform: translateY(0);}
			100% {transform: translateY(0);}
		}

	animation: bounceUp .4s ease-out 0s 1 normal;

}

.bulletin-downvoted {

	border-top: $arrow-width solid rgba(218, 39, 44, 1);
	
	@keyframes bounceDown {
		0% {transform: translateY(0);}
		15% {transform: translateY(1.2vw);}
		95% {transform: translateY(0);}
		100% {transform: translateY(0);}
	}
	animation: bounceDown .4s ease-out 0s 1 normal;
}


.link-disabled {
    cursor: not-allowed;
    pointer-events: none;
}


.bulletin-item-icons {
	
	position:absolute;
	margin:3.5vw;
	margin-left:3.5vw;
	margin-top:3.0vw;
	
		
	z-index:3;
	float:left;
	color:white;
	
}

.bulletin-video-player-iframe {
	position: absolute; 
	bottom:0; 
	top:0; 
	height:100%; 
	width:100%; 
	border: none;
}

.comment-icon {
	margin-bottom:4.5vw;	
}

.share-icon {
	margin-left:3vw;		
}
