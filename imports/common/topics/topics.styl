@import 'nib';

topics {
    .scroll-window {
        margin: 3vw 0 0 0;
        padding: 0 0 3vw 0;
        width: 100%;
        overflow-x: scroll;
    }

    .scroll-content {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        // width: fit-content;
        align-items: flex-start;
        position: relative;
        padding-left: 1vw;
        padding-right: 1vw;
    }

    .content-container {
        display: block;
        margin: 0vw 1vw;
        vertical-align: top;
    }
}

.bulletin-visited {
    @keyframes visited {
        0% {
            transform: translateY(0);
        }

        10% {
            transform: translateY(-7vw);
        }

        95% {
            transform: translateY(0);
        }

        100% {
            transform: translateY(0);
        }
    }

    animation: visited 0.7s ease-out 0s 1 normal;
}

.bulletin-item-image-and-details-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    min-width: 100%;
    width: 80vw;
    height: 104vw;
    box-shadow: 0.3vw 0.4vw 1.4vw rgba(4, 4, 4, 0.42);
    border-radius: 0.8vw;
    white-space: normal;
    overflow-x: auto;
}

.bulletin-item-image-container {
    display: flex;
    flex-direction: column;
    position: relative;
    flex: 1;
    min-width: 0;
    min-height: 0;
    overflow: hidden;
}

.bulletin-item-image:before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-image: linear-gradient(-180deg, rgba(0, 0, 0, 0.3), transparent);
    opacity: 0.4;
    pointer-events: none;
    z-index: 1;
}

.bulletin-item-image {
    background-size: cover;
    background-position: center;
    background-color: white;
    display: flex;
    flex: 1;
    min-width: 0;
    min-height: 0;
    overflow: hidden;
}

.bulletin-item-description {
    padding: 4vw;
    min-width: 0;
    min-height: 0;
    max-height: 42vw;
    height: 30vw;
    z-index: 1;
    background: white;
    color: #151515;
    font-weight: 400;
    font-size: 3vw;
    text-align: left;
    line-height: 1.6;
    display: flex;
    position: relative;
    overflow: hidden;
}

.bulletin-item-description:before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 10%;
    background-image: linear-gradient(to top, rgba(255, 255, 255, 1), rgba(255, 255, 255, 0));
}

.auto-height {
    height: auto !important;
}

.full-height {
    height: 100%;
}

.rest-of-height {
    height: auto;
}

.bulletin-item-title-container {
    position: absolute;
    bottom: 0;
    width: 100%;
    text-align: left;
    padding: 4vw;
    background-image: linear-gradient(to top, rgba(0, 0, 0, 0.7) 40%, transparent);
    line-height: 1.4;
    z-index: 3;
}

.bulletin-item-controls-container {
    background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.5) 10%, transparent);
    position: absolute;
    height: 25vw;
    width: 100%;
    z-index: 2;
}

.bulletin-item-title {
    color: white;
    font-size: 4.7vw;
    font-weight: 700;
    z-index: 4;
    margin-bottom: 2.5vw;
}

.bulletin-time-elapsed {
    color: white;
    font-size: 3vw;
    font-weight: 400;
    opacity: 0.8;
    float: left;
    z-index: 4;
}

.bulletin-item-publisher {
    color: white;
    font-size: 3vw;
    font-style: italic;
    font-weight: 600;
    opacity: 0.8;
    float: right;
    z-index: 4;
    padding-right: 0.5vw;
}

.bulletin-item-header {
    text-align: left;
    color: darkgrey;
    font-weight: 400;
    font-size: 3vw;
    margin: 1vw 1vw;
}

.bulletin-sources {
    white-space: nowrap;
    overflow-x: scroll;
    width: 100%;
    max-width: 80vw;
    background-color: white;
    text-align: right;
}

.bulletin-source {
    display: inline-block;
    height: 7vw;
    width: 7vw;
    background-size: cover;
    margin-right: 5vw;
    margin-bottom: 0vw;
    margin-top: 1vw;
    filter: grayscale(100%);
    opacity: 0.6;
}

.bulletin-source-selected {
    filter: grayscale(0%);
    opacity: 1;
    content: '';
}

.solid-overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    bottom: 0;
    opacity: 0.5;
    background-color: rgba(0, 0, 0, 0.1);
    pointer-events: none;
    z-index: 1;
}


.link-disabled {
    cursor: not-allowed;
    pointer-events: none;
}

.bulletin-video-player-iframe {
    position: absolute;
    bottom: 0;
    top: 0;
    height: 100%;
    width: 100%;
    border: none;
}
