{
      // path to the Meteor executable (e.g. /usr/local/bin/meteor on the Mac or %USERPROFILE%\AppData\Local\.meteor\meteor.bat on Windows
  "meteorhelper.meteorPath": "/usr/local/bin/meteor",

  // Specifies the port Meteor will be using.
  "meteorhelper.meteorPort": "3000",

  // Relative path to the Meteor settings JSON file, e.g. app/settings/settings.debug.json
  "meteorhelper.meteorSettings": "",

  // Relative path to your Meteor application, e.g. app
  "meteorhelper.relativeProjectPath": "",

  // 
  "meteorhelper.testConfiguration": {
    "driverPackage": "meteortesting:mocha",
    "debugPort": "9229",
    "envArgs": [
        {
            "argName": "TEST_WATCH", "argValue": "1"
        }
    ]
  }
}
